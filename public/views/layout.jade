	head
		title Orgnz.it
		script(src="http://ajax.googleapis.com/ajax/libs/jquery/1.6.1/jquery.min.js")
		script(src="../../socket.io/socket.io.js")
		script(src="../../js/orgnzit.js")
		script(src="../../js/socket.js")
		link(rel="stylesheet", type="text/css", href="/css/orgnzit.css")
	
	body
		div#doc
			div#cols
			div#rows
		
		style
			a{
				color:#003399;
				margin-right:20px;
				margin-top:20px;
				cursor:pointer;
			}
		//a#addRow Add Row
		//a#addCol Add Col
		
		script
			var set_doc = function(data){
				orgnzit.doc = data;
				orgnzit.UI.init(function(){
					for(var i = 0; i < data.rows.length; i++){
						var row = data.rows[i];
						for(var j = 0; j < row.cells.length; j++){
							var cell = row.cells[j];
							orgnzit.UI.unlock(cell);
						}
					}
					
					/*$(".cell").each(function(){
						orgnzit.UI.unlock($(this).attr("id"));
					});*/
					
				});
			}
			$.ajax({
				type:"GET",
				url: "/doc/#{id}/json",
				success: set_doc
			});
